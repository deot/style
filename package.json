{
  "name": "@deot/style",
  "version": "1.0.2",
  "description": "Public CSS to HTML5",
  "main": "./dist/index.css",
  "type": "module",
  "files": [
    "src/**",
    "dist/**",
    "examples/**"
  ],
  "packageManager": "pnpm@8.x.x",
  "scripts": {
    "init": "npx pnpm install",
    "init:force": "rm -rf ./node_modules pnpm-lock.yaml && npm run init",
    "dev": "tsx ./scripts/dev",
    "build": "tsx ./scripts/build",
    "release": "tsx ./scripts/release",
    "test": "jest",
    "lint": "esw src --ext .ts,.js --color",
    "lint:fix": "npm run lint -- --fix",
    "lint:watch": "npm run lint -- --watch --fix",
    "lint:style": "stylelint --fix 'src/**/*.{css,scss}' --cache --cache-location node_modules/.cache/stylelint/"
  },
  "scripts-info": {
    "dev": "开发模式",
    "build": "打包模式",
    "test": "执行测试"
  },
  "author": "deot",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/deot/sass"
  },
  "bugs": {
    "url": "https://github.com/deot/sass/issues"
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/core": "^7.21.4",
    "@babel/eslint-plugin": "^7.19.1",
    "@babel/preset-env": "^7.21.4",
    "@deot/dev-shared": "^1.0.2",
    "@microsoft/api-extractor": "^7.34.4",
    "@rollup/plugin-typescript": "11.1.0",
    "@types/fs-extra": "^11.0.1",
    "@types/jest": "^29.5.0",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "autoprefixer": "^10.4.14",
    "chokidar": "^3.5.3",
    "conventional-commits-parser": "^3.2.4",
    "cssnano": "^5.1.15",
    "eslint": "^8.38.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsdoc": "^43.0.0",
    "eslint-plugin-markdown": "^3.0.0",
    "eslint-watch": "^8.0.0",
    "fs-extra": "^11.1.1",
    "husky": "^8.0.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.5.0",
    "jest-environment-node-single-context": "^29.0.0",
    "lint-staged": "^13.2.0",
    "normalize.css": "^8.0.1",
    "postcss": "^8.4.21",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-import": "^15.1.0",
    "postcss-url": "^10.1.3",
    "rollup": "^3.20.2",
    "sass": "^1.60.0",
    "semver": "^7.3.8",
    "stylelint": "^13.12.0",
    "stylelint-config-standard": "^21.0.0",
    "stylelint-order": "^4.1.0",
    "ts-jest": "^29.1.0",
    "tslib": "^2.5.0",
    "tsx": "^3.12.6",
    "typescript": "^5.0.4"
  }
}