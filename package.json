{
	"name": "@deot/css",
	"version": "1.0.0",
	"description": "A modern alternative to Sass",
	"main": "./dist/index.css",
	"type": "module",
	"files": [
		"src/**",
		"dist/**",
		"examples/**"
	],
	"scripts": {
		"dev": "tsx ./scripts/dev",
		"build": "tsx ./scripts/build",
		"test": "jest",
		"pub": "bash scripts/publish.sh",
		"lint": "esw src --ext .ts,.js --color",
		"lint:fix": "npm run lint -- --fix",
		"lint:watch": "npm run lint -- --watch --fix",
		"lint:style": "stylelint --fix 'src/**/*.{css,scss}' --cache --cache-location node_modules/.cache/stylelint/"
	},
	"author": "deot",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/deot/sass"
	},
	"bugs": {
		"url": "https://github.com/deot/sass/issues"
	},
	"dependencies": {
		"normalize.css": "^8.0.1"
	},
	"devDependencies": {
		"@rollup/plugin-typescript": "^11.0.0",
		"@types/fs-extra": "^11.0.1",
		"@types/jest": "^29.5.0",
		"@typescript-eslint/eslint-plugin": "^5.56.0",
		"autoprefixer": "^10.4.14",
		"chokidar": "^3.5.3",
		"cssnano": "^5.1.15",
		"eslint": "^8.35.0",
		"eslint-config-airbnb-base": "^15.0.0",
		"eslint-plugin-babel": "^5.3.1",
		"eslint-plugin-import": "^2.27.5",
		"eslint-plugin-jsdoc": "^40.0.1",
		"eslint-plugin-markdown": "^3.0.0",
		"eslint-watch": "^8.0.0",
		"fs-extra": "^11.1.1",
		"husky": "^4.3.8",
		"identity-obj-proxy": "^3.0.0",
		"jest": "^29.5.0",
		"jest-environment-node-single-context": "^29.0.0",
		"lint-staged": "^13.2.0",
		"postcss": "^8.4.21",
		"postcss-flexbugs-fixes": "^5.0.2",
		"postcss-import": "^15.1.0",
		"postcss-url": "^10.1.3",
		"rollup": "^3.20.2",
		"sass": "^1.60.0",
		"stylelint": "^13.12.0",
		"stylelint-config-standard": "^21.0.0",
		"stylelint-order": "^4.1.0",
		"ts-jest": "^29.0.5",
		"tslib": "^2.5.0",
		"tsx": "^3.12.6",
		"typescript": "^4.9.5"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged",
			"commit-msg": "node ./scripts/commit-lint"
		}
	},
	"lint-staged": {
		"*.scss": [
			"stylelint --fix --syntax scss",
			"git add"
		],
		"src/**/*.{js,ts}": [
			"esw --ext '.js,.ts' --fix",
			"git add"
		]
	},
	"pre-commit": [
		"lint-staged"
	]
}
